<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="ProgressTheme" parent="Theme.MaterialComponents">
		<item name="android:background">@color/colorPrimaryDarkTransparent</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="Round" parent="Widget.MaterialComponents.CardView">
		<item name="android:background">@drawable/background_circular_item</item>
	</style>

	<style name="ImportantText" parent="AppTheme">
		<item name="android:textColor">@color/colorAccent</item>
		<item name="android:textSize">@dimen/text_size_xxlarge</item>
	</style>

	<style name="HeaderText" parent="AppTheme">
		<item name="android:textSize">@dimen/text_size_large</item>
	</style>

</resources>
