<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="@dimen/padding_xsmall"
    android:layout_marginLeft="@dimen/padding_xsmall"
    android:layout_marginRight="@dimen/padding_xsmall"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/primary_item_text"
            style="@style/ActionText"
            android:layout_margin="@dimen/padding_large"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Selectable Item With text that is very long"/>

        <ImageButton
            android:id="@+id/action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/list_action_icon_height"
            android:minWidth="@dimen/list_action_icon_width"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="@dimen/padding_small"
            android:paddingEnd="-8dp"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_large"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
